
QPushButton {
    background-color: palette(button);
    border: 2px solid #6c757d;
    border-radius: 5px;
    height: 24px;
}

QPushButton:focus {
    background-color: #f0faff;
    border: 2px solid #6c757d;
    border-radius: 5px;
}

QPushButton:hover {
    background-color: {{ palette('button') |  lighter(120) }};
    border: 2px solid #6c757d;
    border-radius: 5px;
}

QPushButton:hover:focus {
    background-color: {{ palette('button') |  lighter(120) }};
    border: 2px solid #6c757d;
    border-radius: 5px;
}


QPushButton:pressed,
QPushButton:pressed:focus {
    background-color: {{ palette('button') |  darker(120) }};
    border: 2px solid #6c757d;
    border-radius: 5px;
}
